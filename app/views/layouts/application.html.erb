<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
  <head>
    <title>Dictation App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Include Bootstrap and custom styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json">

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="<%= asset_path('icons/speaker-180x.png') %>">

    <div class = 'container'><h3 style="color: red;">Announcement</h3>
    <ul>
    <li><b>Currently working:</b> Notes, Tasks</li>
    <li><b>In development working:</b> Shopping List, Recipe Plans, Recommendations, Ideas, Commands, Wordle </li>
    </ul>
    </div>

    <style>
      /* Custom Styles */

      /* Button States */
      #action-button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      #action-button.grant {
        background-color: #007bff; /* Blue */
        color: white;
      }

      #action-button.record {
        background-color: #dc3545; /* Red */
        color: white;
      }

      #action-button.processing {
        background-color: #ff6f61; /* Light Red */
        color: black;
        cursor: not-allowed;
      }

      /* Status Messages */
      #status-message {
        margin-bottom: 1rem;
        color: black;
        font-weight: bold;
      }

      /* Transcription Section */
      #transcription-section {
        display: none;
        margin-top: 1rem;
      }

      /* Checkbox Styles */
      .form-check {
        margin-top: 1rem;
      }

      /* Events and Action Log Sections */
      .log-section {
        margin-top: 2rem;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
      }

      .log-section h3 {
        margin-top: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0.5rem;
      }

      th, td {
        border: 1px solid #ddd;
        padding: 8px;
      }

      th {
        background-color: #f2f2f2;
        text-align: left;
      }

      /* Optional: Add some spacing */
      body {
        padding: 20px;
        font-family: Arial, sans-serif;
      }

      /* Responsive Design */
      @media (max-width: 600px) {
        #action-button {
          width: 100%;
        }
      }

      /* Styles for Grant Button */
      #grant-mic-button {
        display: none; /* Initially hidden */
        margin-bottom: 1rem;
      }
    </style>

    <br>
    <div class="container"><a href = "/" class="btn btn-secondary mb-4">Home</a></div>
    <hr>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
